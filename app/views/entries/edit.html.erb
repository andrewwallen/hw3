<h1>Edit Entry</h1>

<form action="/places/<%= @place["id"] %>/entries/<%= @entry["id"]%>/update" method="post">
  <input type="hidden" name="_method" value="post">

  <p>
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @entry["title"] %>">
  </p>

  <p>
    <label for="occurred_on">Date</label>
    <input type="date" name="occurred_on" value="<%= @entry["occurred_on"] %>">
  </p>
  
  <p>
    <label for="description">Description</label>
    <input type="text" name="description" value="<%= @entry["description"] %>">
  </p>
  <button>Save</button>
</form>